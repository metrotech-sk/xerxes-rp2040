{
// These settings tweaks to the cmake plugin will ensure
// that you debug using cortex-debug instead of trying to launch
// a Pico binary on the host
"cmake.statusbar.advanced": {
    "debug": {
        "visibility": "hidden"
    },
    "launch": {
        "visibility": "hidden"
    },
    "build": {
        "visibility": "default"
    },
    "buildTarget": {
        "visibility": "hidden"
    }
},
"cmake.buildBeforeRun": true,
"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
"cortex-debug.openocdPath": "/usr/local/bin/openocd",

    "C_Cpp.errorSquiggles": "disabled",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "build": false
    },
    "explorerExclude.backup": {},
    
    "files.associations": {
        "iostream": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "utility": "cpp",
        "bitset": "cpp",
        "array": "cpp",
        "bit": "cpp",
        "deque": "cpp",
        "unordered_map": "cpp",
        "functional": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "ranges": "cpp",
        "tuple": "cpp",
        "atomic": "cpp",
        "chrono": "cpp",
        "complex": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "map": "cpp",
        "algorithm": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "cinttypes": "cpp"
    },
    "python.testing.pytestArgs": [
        "tests/pytest"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=F401,W291,E303,W293,W504,E221",
     ]
}